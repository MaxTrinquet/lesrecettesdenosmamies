  <h1><strong>Votre Recette </strong></h1></div>

  <div class="container">
    <%= simple_form_for [@user, @recipe] do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :ingredient %>
      <%= f.input :category %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit %>
    <% end %>
  </div>
