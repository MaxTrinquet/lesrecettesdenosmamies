<%= simple_form_for ([@user, @recipe, @comment]) do |f| %>
  <%= f.input :name, input_html: { placeholder: "Votre nom ici " } %>
  <%= f.input :comment_description,
              as: :text,
              input_html: { placeholder: "Un avis, un conseil ? " } %>
  <%= f.button :submit, 'Je commente!'%>
<% end %>
