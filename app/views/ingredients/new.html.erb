<div class="container">

  <h1> <%= @recipe.name %> </h1>

  <h3>Liste des ingrédients</h3>

  <% @recipe.ingredients.each do |ingredient| %>
    </li> <%= ingredient.quantity %> <%= ingredient.measure %> <%= ingredient.name %> </li>
  <% end %>



  <div class="container-form">
    <%= simple_form_for [@user, @recipe, @ingredient] do |f| %>
      <%= f.error_notification %>
      <%= f.input :name , label: "Ingrédient"%>
      <%= f.input :measure,
                  label: "Unité",
                  collection: ["g","l","-","cl","kg","cuillère(s) à café", "cuillère(s) à soupe", "pincée(s)", "sachet(s)"],
                  hint: 'Pour les oeufs ou les produits entiers, utilisez le "-" ' %>
      <%= f.input :quantity, label: "Quantité"%>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
