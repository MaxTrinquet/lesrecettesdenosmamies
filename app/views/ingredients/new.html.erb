 <h1> <%= @recipe.name %> </h1>

   <h3>Liste des ingredients</h3>

    <% @recipe.ingredients.each do |ingredient| %>
      </li> <%= ingredient.quantity %> <%= ingredient.measure %> <%= ingredient.name %> </li>
    <% end %>



 <div class="container">
    <%= simple_form_for [@user, @recipe, @ingredient]  do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :measure %>
      <%= f.input :quantity %>
      <%= f.button :submit %>
    <% end %>
</div>


