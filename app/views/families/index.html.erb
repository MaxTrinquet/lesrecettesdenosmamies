<!-- Families index = After Login page  -->


<!-- Red container  -->
<div class="container-home-red">
  <!-- Se deconnecter bouton  -->
  <div class="logo">
    <span style="width:150px"></span>
    <%= image_tag "logo_transparent.png", alt: "alttext" %>
    <div class="btn-logout">
      <%= link_to destroy_user_session_path, method: :delete do %>
        Se deconnecter
      <% end %>
    </div>
  </div>


  <div class="description-home">
    <h1> Bienvenue sur <span> Les recettes de nos mamies ! </span> </h1>
  </div>
  <div class="description-text">
    <p>Ce site vous permet de partager en famille vos meilleures recettes :
    celles de vos mamies, de votre maman, de vos frères & soeurs...
    Retrouvez-les facilement et n'hésitez pas à les partager et à les commenter ! </p>
  </div>
</div>

  <div class="btn-container">
    <!-- Bouton se connecter  -->
    <% if current_user == nil %>
      <svg id="stroke" xmlns="http://www.w3.org/2000/svg" width="0" height="0">
        <defs>
          <path id="line" d="M2 2c49.7 2.6 100 3.1 150 1.7-46.5 2-93 4.4-139.2 7.3 45.2-1.5 90.6-1.8 135.8-.6" fill="none" stroke-linecap="round" stroke-linejoin="round" vector-effect="non-scaling-stroke"/>
        </defs>
      </svg>
      <a class="btn btn-login" href= "./users/sign_in" > Se connecter
        <svg class="button-stroke" viewBox="0 0 154 13">
          <use href="#line"></use>
        </svg>
        <svg class="button-stroke" viewBox="0 0 154 13">
          <use href="#line"></use>
        </svg>
      </a>

    <% else %>

      <!-- Mes recettes -->
      <svg id="stroke" xmlns="http://www.w3.org/2000/svg" width="0" height="0">
        <defs>
          <path id="line" d="M2 2c49.7 2.6 100 3.1 150 1.7-46.5 2-93 4.4-139.2 7.3 45.2-1.5 90.6-1.8 135.8-.6" fill="none" stroke-linecap="round" stroke-linejoin="round" vector-effect="non-scaling-stroke"/>
        </defs>
      </svg>
      <a class="btn btn-login" href= "./users/:id/recipes" > Mes recettes
        <svg class="button-stroke" viewBox="0 0 154 13">
          <use href="#line"></use>
        </svg>
        <svg class="button-stroke" viewBox="0 0 154 13">
          <use href="#line"></use>
        </svg>
      </a>
    <% end %>
  </div>

